<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/shot_cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/shot_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_max_height"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:layout_marginBottom="-80dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/shot_linear"
            android:layout_below="@id/shot_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blackTransparent">
            <TextView
                android:id="@+id/shot_item_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/ShotHeaderText"
                android:layout_margin="@dimen/text_margin"/>
            <TextView
                android:id="@+id/shot_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:maxLines="2"
                android:textAppearance="@style/ShotDescText"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>