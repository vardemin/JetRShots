<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ShotHeaderText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/shotTextColor</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
    </style>

    <style name="ShotDescText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/shotTextColor</item>
        <item name="android:textSize">@dimen/desc_size</item>
    </style>

</resources>
